<!DOCTYPE html>
<html lang="en">

<%- include('layouts/head') %>

<body>
    <div class="container">
        <!-- NAVBAR START -->

        <%- include('layouts/adopthead', { title: 'Add a cat' }) %>

        <!-- NAVBAR END -->

        <!-- CONTENT START -->

        <div class="container-form">

            <!-- FORM SECTION START -->

            <form action="/submit-form" method="POST" onsubmit="return ThanksPopup();"">
                <label for="firstName" ><b>First Name </b><b class="red">*</b></label><br>
                <input type="text" class="form-isi" id="firstName" name="firstName" required><br>
                <label for="lastName"><b>Last Name </b><b class="red">*</b></label><br>
                <input type="text" class="form-isi" id="lastName" name="lastName" required><br>
                <label for="address"><b>Address </b><b class="red">*</b></label><br>                    
                <div class="container-addr"> 
                    <input type="text" class="form-isi" id="streetAddress" name="streetAddress" placeholder="Street Address" required><br>
                    <input type="text" class="form-isi" id="city" name="city" placeholder="City" required><br>
                </div>
                <div class="container-addr">
                    <input type="text" class="form-isi" id="region" name="region" placeholder="Region" required><br>
                    <input type="number" class="form-isi" id="postalCode" name="postalCode" placeholder="Postal/Zip Code" required><br>
                </div>
                <label for="email"><b>Email</b></label><br>
                <input type="email" class="form-isi" id="email" name="email" value="<%= user.email%>" readonly required><br>
                <label for="phone"><b>Phone Number</b></label><br>
                <input type="number" class="form-isi" id="phone" name="phone" value="0<%= user.phone%>" readonly required><br>
                <label for="catName"><b>Name of Cat Applied For</b></label><br>
                <input type="text" class="form-isi" id="catName" name="catName" value="<%= catName %>" readonly required><br>
                <label for="terms">
                    <input type="checkbox" id="terms" name="terms" required>
                    I agree to the terms and conditions and swear to take care and love the cat.<b class="red">*</b>
                </label><br>
                <input type="submit" value="Submit" class="btn">
            </form>

            <!-- FORM SECTION END -->

        </div>

        <!-- CONTENT END -->

        <!-- FOOTER START -->

        <%- include('layouts/adoptfooter') %>

        <!-- FOOTER END -->

    </div>
    <script src="/public/js/main.js"></script>
    <script>
        function ThanksPopup() {
            alert("Thank you for your submission!");
        }
    </script>
</body>

</html>

