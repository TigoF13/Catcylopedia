<!DOCTYPE html>
<html>

<head>
    <title>
        <% title %>
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="container">

        <!-- REGISTER START -->

        <div class="flex justify-center items-center h-screen bg-indigo-800">
            <div class="w-96 p-6 shadow-lg bg-white rounded-md">
                <h1 class="text-3xl block text-center font-semibold">Register <i class="fa-solid fa-cat"></i></h1>
                <hr class="mt-3">
                <form action="/register" method="POST" class="regform" onsubmit="return validatePhone();">
                    <div class="mt-3">
                        <% if (message && message.length> 0) { %>   <!-- FAILED MESSAGE CONDITION -->
                            <div class="alert alert-danger" id="failflash" 
                                style="color: red; font-size: 16px; border: 1px solid red; border-radius: 5px; text-align: center; margin-bottom: 10px;">
                                <%= message %> 
                            </div>
                            <% } %>

                    <!-- USERNAME START -->

                    <div class="mt-3">
                        <label for="username" class="block text-base mb-2">Username</label>
                        <input type="text" id="username" name="username"
                            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
                            placeholder="Enter Username..." required />
                    </div>

                    <!-- USERNAME END -->

                    <!-- PHONE NUM START -->

                    <div class="mt-3">
                        <label for="phone" class="block text-base mb-2">Phone Number</label>
                        <input type="number" id="phone" name="phone" minlength="10" maxlength="13"
                            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
                            placeholder="Enter Phone Number..." required />
                    </div>

                    <!-- PHONE NUM END -->
                    
                    <!-- EMAIL START -->

                    <div class="mt-3">
                        <label for="email" class="block text-base mb-2">Email</label>
                        <input type="email" id="email" name="email"
                            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
                            placeholder="example@gmail.com" required />
                    </div>

                    <!-- EMAIL END -->

                    <!-- PASSWORD START -->

                    <div class="mt-3">
                        <label for="password" class="block text-base mb-2">Password</label>
                        <input type="password" id="password" name="password"
                            class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600"
                            placeholder="Enter Password..." required />
                    </div>

                    <!-- PASSWORD END -->

                    <!-- ACCOUNT CONFIRMATION START -->

                    <div class="mt-3 flex justify-between items-center">
                        <div>
                            <a href="/login">Already have an account?</a>   <!-- REDIRECT TO LOGIN PAGE -->
                        </div>
                    </div>

                    <!-- ACCOUNT CONFIRMATION END -->

                    <div class="mt-5">
                        <button type="submit"
                            class="border-2 border-indigo-700 bg-indigo-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-indigo-700 font-semibold"><i
                                class="fa-solid fa-right-to-bracket"></i>&nbsp;&nbsp;Register</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- REGISTER END -->

    </div>

    <!-- PHONE NUM CONDITIONS SCRIPT START -->

    <script>
        setTimeout(function () {
            var flashMessage = document.getElementById('failflash');
            if (flashMessage) {
                flashMessage.style.display = 'none';
                }
            }, 3000);  
        function validatePhone() {
            var phoneInput = document.getElementById('phone');
            var phone = phoneInput.value;
            var phoneLength = phone.toString().length;
            if (phoneLength < 10 || phoneLength > 13) {
                alert('Phone number must be 10 to 13 digits long'); // DIGIT NUMBER REMINDER MESSAGE
                return false;
            }
            return true;    // DIGIT NUMBER CORRECT CONDITION
        }
    </script>

    <!-- PHONE NUM CONDITIONS SCRIPT END -->

</body>

</html>