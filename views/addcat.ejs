<!DOCTYPE html>
<html lang="en">

<%- include('layouts/adopt/head') %>

<body>
    <div class="container">
        <!-- NAVBAR START -->

        <%- include('layouts/adopt/adopthead', { title: 'Add a cat' }) %>

        <!-- NAVBAR END -->

        <!-- CONTENT START -->

        <div class="container-form">
            <form action="/Add-cat" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="name">Name of Cat </label>
                    <input type="text" id="name" name="name" placeholder="Name" value="" required class="form-isi">
                </div>
                <div>
                    <label for="breed">Breed</label>
                    <select id="breed" name="breed" required class="form-isi">
                        <option value="">Select a breed</option>
                        <option value="Anggora">Anggora</option>
                        <option value="Himalaya">Himalaya</option>
                        <option value="Kampung">Kampung</option>
                        <option value="Maine Coon">Maine Coon</option>
                        <option value="Munchkin">Munchkin</option>
                        <option value="Persia">Persia</option>
                        <option value="Ragdoll">Ragdoll</option>
                        <option value="Siamese">Siamese</option>
                    </select>
                </div>
                <div>
                    <label for="Age" style="font-size: 20px;">Age</label><br>   
                    <div class="row-form">
                        <div>
                            <label for="AgeY">Years</label>
                            <input type="number" id="AgeY" name="AgeY" placeholder="0" max="100" min="0" required class="form-isi">
                        </div>
                        <div>
                            <label for="AgeM">Months</label>
                            <input type="number" id="AgeM" name="AgeM" placeholder="00" max="11" min="0" required class="form-isi">
                        </div>
                        <div>
                            <label for="AgeD">Days</label>
                            <input type="number" id="AgeD" name="AgeD" placeholder="00" max="29" min="1" required class="form-isi">
                        </div>
                    </div>
                </div>
                <label>Gender</label>
                <div class="row-form radio-form form-isi">
                    <div >
                        <input type="radio" id="male" name="gender" value="Male" required >
                        <label for="male" class="radio-isi">Male</label>
                        <input type="radio" id="female" name="gender" value="Female" required >
                        <label for="female">Female</label>
                    </div>
                </div>
                <div>
                    <label for="color">Color</label>
                    <select id="color" name="color" required class="form-isi">
                        <option value="">Select a color</option>
                        <option value="Black">Black</option>
                        <option value="White">White</option>
                        <option value="Brown">Brown</option>
                        <option value="Gray">Gray</option>
                        <option value="Tuxedo">Tuxedo</option>
                        <option value="Calico">Calico</option>
                        <option value="Tabby">Tabby</option>
                        <option value="Orange">Orange</option>
                    </select>
                </div>
                <div>
                    <label for="intake">Intake Date</label> <br>
                    <div class="row-form">
                        <input type="number" id="InM" name="InM" placeholder="MM" value="" max="12" min="1" required class="form-isi">
                        <input type="number" id="InD" name="InD" placeholder="DD" value="" max="31" min="1" required class="form-isi">
                        <input type="number" id="inY" name="inY" placeholder="YYYY" value="" max="9999" min="2000" required class="form-isi">
                    </div>
                </div>
                <div>
                    <label for="image">Upload Image</label>
                    <input type="file" id="image" name="image" required class="form-isi">
                </div>
                <div>
                    <button type="submit" class="btn">Submit</button>
                </div>
            </form>
        </div> <!-- This closing </div> was moved here -->

        <!-- CONTENT END -->

        <!-- FOOTER START -->

        <%- include('layouts/adopt/adoptfooter') %>

        <!-- FOOTER END -->

    </div>
    <script src="/public/js/main.js"></script>
</body>

</html>