<!DOCTYPE html>
<html lang="en">

<%- include('layouts/head') %>

<body>
    <div class="container">
        <!-- NAVBAR START -->

        <%- include('layouts/adopthead', { title: 'Add a cat' }) %>

        <!-- NAVBAR END -->

        <!-- CONTENT START -->

        <div class="container-form">

            <!-- ADD CAT FORM START -->

            <form action="/Add-cat" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="name">Name of Cat </label>
                    <input type="text" id="name" name="name" placeholder="Name" value="" required class="form-isi">
                </div>
                <div>
                    <label for="breed">Breed</label>
                    <select id="breed" name="breed" required class="form-isi">
                        <option value="" disabled selected>Select Breed</option>
                        <option value="Anggora"><b>Anggora</b></option>
                        <option value="Himalaya"><b>Himalaya</b></option>
                        <option value="Kampung"><b>Kampung</b></option>
                        <option value="Maine Coon"><b>Maine Coon</b></option>
                        <option value="Munchkin"><b>Munchkin</b></option>
                        <option value="Persia"><b>Persia</b></option>
                        <option value="Ragdoll"><b>Ragdoll</b></option>
                        <option value="Siamese"><b>Siamese</b></option>
                    </select>
                </div>
                <div>
                    <label for="Age" style="font-size: 20px;">Age</label>   
                    <div class="row-form">
                        <div>
                            <label for="AgeY">Years</label>
                            <input type="number" id="AgeY" name="AgeY" placeholder="0" max="100" min="0" required class="form-isi">
                        </div>
                        <div>
                            <label for="AgeM">Months</label>
                            <input type="number" id="AgeM" name="AgeM" placeholder="00" max="11" min="0" required class="form-isi">
                        </div>
                        <div>
                            <label for="AgeD">Days</label>
                            <input type="number" id="AgeD" name="AgeD" placeholder="00" max="29" min="1" required class="form-isi">
                        </div>
                    </div>
                </div>
                <div>
                    <label for="gender">Gender</label>
                    <div><br>
                        <div class="gender-option">
                            <label for="genderMale"><input type="radio" id="genderM" name="gender" value="Male" required> Male</label>
                            <label for="genderFemale"><input type="radio" id="genderF" name="gender" value="Female" required> Female</label>
                        </div>
                    </div><br>
                </div>
                <div>
                    <label for="color">Color</label>
                    <select id="color" name="color" required class="form-isi">
                        <option value="" disabled selected>Select Color</option>
                        <option value="Black"><b>Black</b></option>
                        <option value="White"><b>White</b></option>
                        <option value="Orange"><b>Orange</b></option>
                        <option value="Cream"><b>Cream</b></option>
                        <option value="Gray"><b>Gray</b></option>
                        <option value="Brown"><b>Brown</b></option>
                        <option value="Bicolor"><b>Bicolor</b></option>
                        <option value="Calico"><b>Calico</b></option>
                    </select>
                </div>
                <div>
                    <label for="intake">Intake Date</label> <br>
                    <div class="row-form">
                        <input type="number" id="InM" name="InM" placeholder="MM" value="" max="12" min="1" required class="form-isi">
                        <input type="number" id="InD" name="InD" placeholder="DD" value="" max="31" min="1" required class="form-isi">
                        <input type="number" id="inY" name="inY" placeholder="YYYY" value="" max="9999" min="2000" required class="form-isi">
                    </div>
                </div>
                <div>
                    <label for="image">Upload Image</label>
                    <input type="file" id="image" name="image" required class="form-isi">
                </div>
                <div>
                    <button type="submit" class="btn">Submit</button>
                </div>
            </form>

            <!-- ADD CAT FORM END -->

        </div> 

        <!-- CONTENT END -->

        <!-- FOOTER START -->

        <%- include('layouts/adoptfooter') %>

        <!-- FOOTER END -->

    </div>
    <script src="/public/js/main.js"></script>
</body>

</html>